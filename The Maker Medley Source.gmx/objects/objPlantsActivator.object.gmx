            with (objPlantsEnemy){
                if (row == other.row &amp;&amp; !scrPlantsEnemyAirborne() &amp;&amp; !dead &amp;&amp; collision_rectangle(other.x - 28, other.y - 32, other.x + 16, other.y + 32, id, true, false) == id){
                    _trigger = true;
                    break;
                    // Killing is handled by separate object
                }
            }
            if (_trigger){
                dead = true;
                if (_armed){
                    var _snd = audio_play_sound(sndMakerSamplePunch, 0, 0);
                    audio_sound_pitch(_snd, PITCH_FLUCT);
                    var _inst = instance_create(x, y, objPlantsActivatorKillEffect);
                    _inst.row = row;
                }
            }
        }
        
        stretchTimer += animMult;
        stretchAmt = sin(pi/72 * min(stretchTimer mod 100, 72));
    }else{
        if (!growing){
            image_alpha -= 0.15;
        }else{
            image_alpha -= 0.1;
        }
        
        if (image_alpha &lt;= 0){
            instance_destroy();
        }
    }
}
